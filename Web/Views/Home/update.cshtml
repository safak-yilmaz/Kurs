@using (Html.BeginForm("PageUpdate", "PageUrl",  FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal text-center">
        <h3>Are you sure you want to update this?</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <br>
        <div class="form-group d-flex justify-content-center">
             <div class="col-md-2 ">
                <p>URL Name: </p>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.UrlName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UrlName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br>
        <div class="form-group d-flex justify-content-center">
             <div class="col-md-2 ">
                <p>URL Address: </p>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.UrlAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UrlAddress, "", new { @class = "text-danger" })
            </div>
        </div>
        <br>
        <div class="form-group d-flex justify-content-center">
            <div class="col-md-offset-2 col-md-10">
               
                  <button type="submit" class="btn btn-labeled btn-success">
         <span class="btn-label"><i class="fa fa-check"></i></span>Success</button>
            </div>
        </div>
    </div>
}


